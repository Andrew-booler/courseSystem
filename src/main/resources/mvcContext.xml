            <bean class="interceptor.TeacherInterceptor"/>
        </mvc:interceptor>
        -->



        <!-- 管理员界面的拦截器，检查是不是管理员
        <mvc:interceptor>
            <mvc:mapping path="/admin/*"/>
            <bean class="interceptor.PermissionInterceptor" />
        </mvc:interceptor>
        -->

    </mvc:interceptors>
</beans>
