<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="model.Resources" table="resources" schema="coursecenter">
        <id name="id">
            <column name="id" sql-type="BIGINT" />
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(100)" length="100"/>
        </property>
        <many-to-one name="course" class="model.Course" fetch="select">
            <column name="couser_id" not-null="true"/>
        </many-to-one>
        <property name="description">
            <column name="description" sql-type="varchar(255)" length="255"/>
        </property>
        <property name="type">
            <column name="type" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="content">
            <column name="content" sql-type="LONGBLOB"/>
        </property>
    </class>
</hibernate-mapping>
